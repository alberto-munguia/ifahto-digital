<header class="header">
    <div class="logo-container">
        <a href="https://ifahtodigital.com/" class="logo" target="_blank">
            <img src="/img/logo-ifd.png" height="35" alt="" />
        </a>
        <div
            class="d-md-none toggle-sidebar-left"
            data-toggle-class="sidebar-left-opened"
            data-target="html"
            data-fire-event="sidebar-left-opened"
        >
            <i class="fas fa-bars" aria-label="Toggle sidebar"></i>
        </div>
    </div>

    <div class="header-right">
        <span class="separator"></span>

        <div id="userbox" class="userbox">
            {#<a href="{{ Url.build({'controller': 'usuarios', 'action': 'logout'})|raw }}">
                <i class="fas fa-sign-out-alt"></i>
            </a> #}
            <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="profile-info" data-lock-name="John Doe" data-lock-email="johndoe@okler.com">
                    <span class="name">{{ usuario.nombre ~ ' ' ~ usuario.apellido_paterno ~ ' ' ~ usuario.apellido_materno|trim }}</span>
                    <span class="role">{{ usuario.puesto.nombre }}</span>
                </div>
                <i class="fa custom-caret"></i>
            </a>
            <div class="dropdown-menu">
                <ul class="list-unstyled mb-2">
                    <li class="divider"></li>
                    <li>
                        <a
                            role="menuitem"
                            tabindex="-1"
                            href="{{ Url.build({'controller': 'usuarios', 'action': 'logout'})|raw }}"
                        >
                            <i class="fas fa-sign-out-alt"></i> Cerrar Sesi√≥n
