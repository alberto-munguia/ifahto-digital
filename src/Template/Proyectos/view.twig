<div class="row text-dark">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    {# <button type="button" class="btn btn-outline-dark btn-sm">
                        <i class="fas fa-arrow-left"></i>
                        Regresar
                    </button> #}
                </div>
                <h2 class="card-title">Detalle del Proyecto</h2>
            </header>
            <div class="card-body">
                <div class="invoice">
                    <header class="clearfix">
                        <div class="row text-dark">
                            <div class="col-sm-6 mt-3">
                                <h3 class="h3 mt-0 mb-1 font-weight-bold">{{ proyecto.nombre }}</h3>
                                <h6 class="h6 m-0 font-weight-bold">{{ proyecto.clave }}</h6>
                                <h6 class="h6 m-0 font-weight-bold">{{ proyecto.clave_ifahto }}</h6>
                            </div>
                            <div class="col-sm-6 text-right mt-3 mb-3">
                                <ul class="list-unstyled">
                                    <li>
                                        <span class="font-italic">Cliente -</span>
                                        <span class="font-weight-bold">{{ proyecto.cliente.nombre }}</span>
                                    </li>
                                    <li>
                                        <span class="font-italic">Marca -</span>
                                        <span class="font-weight-bold">{{ proyecto.marca.nombre }}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </header>
                    <div class="bill-info">
                        <div class="row">
                            <div class="col">
                                <h4 class="h4 text-uppercase">General</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    {# persona que autoriza #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Persona que Autoriza</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.cliente_autorizacion }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# fecha hora de entrega #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Fecha y Hora de Entrega</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.entrega|date('d-m-Y H:i:s') }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# estado #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Estado</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.ciudad.entidad_federativa.nombre }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# tipo de servicio #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Tipo de Servicio</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.tipo_servicio.nombre }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# fecha de autorización #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Fecha de Autorización</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.fecha_autorizacion|date('d-m-Y') }}</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                {# fecha hora de finalización #}
                                <div class="form-group row">
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Fecha y Hora de Finalización</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.finalizacion|date('d-m-Y H:i:s') }}</p>
                                    </div>
                                </div>

                                {# ciudad #}
                                <div class="form-group row">
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Ciudad</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.ciudad.nombre }}</p>
                                    </div>
                                </div>

                                {# tipo de cliente #}
                                <div class="form-group row">
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Tipo de Cliente</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.tipo_cliente.nombre }}</p>
                                    </div>
                                </div>

                                {# responsable de la cuenta #}
                                <div class="form-group row">
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Recurso Responsable</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.responsable }}</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                {# descripción #}
                                <div class="form-group row justify-content-center pt-3">
                                    <label class="col-md-2 control-label text-sm-right pt-2">Descripción</label>
                                    <div class="col-md-10">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.descripcion }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br class="clearfix" />
                    <hr class="dotted" />

                    {% for proyecto_contacto in proyecto.proyecto_contactos if proyecto_contacto.estado == 1 %}
                        <div class="bill-info">
                            <div class="row">
                                <div class="col">
                                    <h4 class="h4 text-uppercase">Contacto {{ proyecto_contacto.tipo }}</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group row">
                                        {# responsable #}
                                        <label class="col-sm-4 control-label text-sm-right pt-2">Nombre Completo</label>
                                        <div class="col-sm-8">
                                            <p class="form-control-static mt-2 mb-1">{{ proyecto_contacto.contacto.nombre_completo }}</p>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        {# email #}
                                        <label class="col-sm-4 control-label text-sm-right pt-2">Correo Electrónico</label>
                                        <div class="col-sm-8">
                                            <p class="form-control-static mt-2 mb-1">{{ proyecto_contacto.contacto.email }}</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group row">
                                        {# teléfono #}
                                        <label class="col-sm-4 control-label text-sm-right pt-2">Teléfono</label>
                                        <div class="col-sm-8">
                                            <p class="form-control-static mt-2 mb-1">{{ proyecto_contacto.contacto.telefono }}</p>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        {# extensión #}
                                        <label class="col-sm-4 control-label text-sm-right pt-2">Extensión</label>
                                        <div class="col-sm-8">
                                            <p class="form-control-static mt-2 mb-1">{{ proyecto_contacto.contacto.extension }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if proyecto_contacto.tipo == 'Responsable' %}
                            <br class="clearfix" />
                        {% endif %}
                        <hr class="dotted" />
                    {% endfor %}

                    <div class="bill-info">
                        <div class="row">
                            <div class="col">
                                <h4 class="h4 text-uppercase">Costos</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    {# monto #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Monto del Proyecto</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.monto|currency('USD') }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# númreo de pagos #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Número de Pagos</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.numero_pago }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# porcentaje de anticipo #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Porcentaje de Anticipo</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.porcentaje_anticipo }}%</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group row">
                                    {# tipo de pagos #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Tipo de Pago</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.periodicidad_pago.nombre }}</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# requiere anticipo #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Requiere Anticipo</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">
                                            {% if proyecto.requiere_anticipo == 1 %}Sí{% else %}No{% endif %}
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {# anticipo #}
                                    <label class="col-sm-4 control-label text-sm-right pt-2">Anticipo</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static mt-2 mb-1">{{ proyecto.anticipo|currency('USD') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br class="clearfix" />
                    <hr class="dotted" />

                    {% if proyecto.proyecto_recursos is not empty %}
                        <div class="bill-info">
                            <div class="row">
                                <div class="col">
                                    <h4 class="h4 text-uppercase">Usuarios Asignados</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover mb-none">
                                            <thead>
                                                <tr>
                                                    <th>Nombre Completo</th>
                                                    <th>Horas Cotizadas</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for recurso in proyecto.proyecto_recursos %}
                                                    <tr>
                                                        <td>{{ recurso.usuario.nombre_completo }}</td>
                                                        <td>{{ recurso.hora_cotizada }}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />
                        <hr class="dotted" />
                    {% endif %}

                    {% if proyecto.multimedias is not empty %}
                        <div class="bill-info">
                            <div class="row">
                                <div class="col">
                                    <h4 class="h4 text-uppercase">Archivos</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover table-hover mb-none">
                                            <thead>
                                                <tr>
                                                    <th>Nombre</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for multimedia in proyecto.multimedias %}
                                                    <tr>
                                                        <td><a href="{{ multimedia.url }}?versionId={{ multimedia.version_id }}" target="_blank">{{ multimedia.nombre_archivo }}</a></td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />
                    {% endif %}
                </div>
            </div>
        </section>
    </div>
</div>